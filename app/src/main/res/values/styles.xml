<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Primary app bar color -->
        <item name="colorPrimary">@color/primary_color</item>

        <!-- Primary dark app bar color -->
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <!-- Style for a category's list header-->
    <style name="ListHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#2B3D4D</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">8sp</item>
        <item name="android:paddingRight">8sp</item>
        <item name="android:paddingTop">4sp</item>
    </style>

    <!-- Style for a category's list entry-->
    <style name="ListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#B4BAC0</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">8sp</item>
        <item name="android:paddingRight">8sp</item>
    </style>

</resources>
