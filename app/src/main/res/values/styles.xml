<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <!-- Style for a category's list header-->
    <style name="ListHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/primary_dark_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">8sp</item>
        <item name="android:paddingTop">8sp</item>
    </style>

    <!-- Style for a category's list entry-->
    <style name="ListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">8sp</item>
    </style>

</resources>
